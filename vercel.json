{
  "version": 2,
  "name": "echogift-website",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/reviews",
      "destination": "/reviews.html"
    }
  ],
  "redirects": [
    {
      "source": "/album",
      "destination": "/album-gift.html",
      "permanent": true
    },
    {
      "source": "/album/",
      "destination": "/album-gift.html",
      "permanent": true
    },
    {
      "source": "/single",
      "destination": "/single-song.html",
      "permanent": true
    },
    {
      "source": "/single/",
      "destination": "/single-song.html", 
      "permanent": true
    },
    {
      "source": "/song",
      "destination": "/single-song.html",
      "permanent": true
    },
    {
      "source": "/song/",
      "destination": "/single-song.html",
      "permanent": true
    },
    {
      "source": "/order",
      "destination": "/index.html#order",
      "permanent": true
    },
    {
      "source": "/order/",
      "destination": "/index.html#order",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}